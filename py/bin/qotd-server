#!/usr/bin/env python3

import qotd.server as qs

def rfc865handler(conn):
    response = "Hello.\n"
    msg = bytes(response, 'UTF-8')
    conn.send(msg)

server = qs.Server(9999, rfc865handler)

server.start()

try:
    server.run()
except KeyboardInterrupt:
    print("SIGINT received.")
    server.shutdown()

print("Shutting down.")
